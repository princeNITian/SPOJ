#include <stdio.h>


int main()
{
    int G,B,temp,count=0;
    //printf("Enter the number of girls and boys:");
    
    while(G!=-1 && B!=-1){
    scanf("%d %d",&G,&B);
    if(G!=-1 && B!=-1){
    if(G>B){
        temp=G/(B+1);
        if(G%(B+1)!=0){
            temp++;
            
        }
        printf("%d\n",temp);
        
    }
    else{
        temp=B/(G+1);
        if(B%(G+1)!=0){
            temp++;
        }
        printf("%d\n",temp);
    }
    count++;
    }
    else{
        break;
    }
}
    

    return 0;
}
